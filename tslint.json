{
	"extends": "tslint:recommended",
	"rules": {
		"max-line-length": {
			"options": [
				100
			]
		},
		"member-ordering": false,
		"no-consecutive-blank-lines": false,
		"object-literal-sort-keys": false,
		"ordered-imports": false,
		"semicolon": true,
		"radix": false,
		"quotemark": [
			true,
			"double"
		],
		"variable-name": [
			true,
			"allow-leading-underscore"
		],
		"no-console": false,
		"indent": [
			true,
			"spaces",
			4
		],
		"jsdoc-format": false,
		"interface-name": false,
		"member-access": true,
		"trailing-comma": true
	}
}
